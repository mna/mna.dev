{
  "name": "mna.dev",
  "version": "1.0.0",
  "main": "sass/mystyles.scss",
  "license": "ISC",
  "scripts": {
    "build:assets": "cp --recursive src/static/* public/",
    "build:css": "node-sass --omit-source-map-url src/sass/styles.scss public/css/styles.css",
    "build:html": "echo 'todo(html): Go command to execute src/templates => public/*.html'",
    "build:js": "echo 'todo(js): probably just copy over from static dir'",
    "prebuild": "npm run clean",
    "build": "npm-run-all build:*",
    "clean": "find public/ -not -path '*/\\.*' -type f -delete",
    "generate": "go run scripts/generate/main.go",
    "serve": "go run scripts/serve/main.go"
  },
  "devDependencies": {
    "bulma": "^0.7.4",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5"
  }
}

{
  "name": "mna.dev",
  "version": "1.0.0",
  "main": "sass/mystyles.scss",
  "license": "ISC",
  "scripts": {
    "build:assets": "cp --recursive src/static/* public/",
    "build:css": "node-sass --omit-source-map-url src/sass/styles.scss public/css/styles.css",
    "build:html": "go run scripts/build-templates/main.go src/posts/ src/templates/ public/",
    "build:js": "echo 'todo(js): probably just copy over from static dir'",
    "prebuild": "npm-run-all -s clean generate",
    "build": "npm-run-all -p build:*",
    "clean": "npm-run-all -p clean:*",
    "clean:public": "find public/ -not -path '*/\\.*' -type f -delete",
    "clean:data": "find data/ -not -path '*/\\.*' -type f -delete",
    "generate": "go run scripts/generate-data/main.go data/",
    "serve": "go run scripts/serve/main.go"
  },
  "devDependencies": {
    "bulma": "^0.7.4",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5"
  }
}

{
  "name": "mna.dev",
  "version": "1.0.0",
  "main": "sass/mystyles.scss",
  "license": "ISC",
  "scripts": {
    "build:static": "cp --recursive src/static/* public/",
    "build:github": "imagemin src/img/github/*.png --out-dir public/img/github",
    "build:css": "npx tailwind build src/css/main.css -c tailwind.js -o public/css/styles.css",
    "build:html": "go run scripts/build-templates/main.go src/posts/ data/ src/templates/ public/",
    "build:js": "echo 'todo(js): probably just copy over from static dir'",
    "prebuild": "npm-run-all -s clean generate",
    "build": "npm-run-all -p build:*",
    "clean": "npm-run-all -p clean:*",
    "clean:public": "find public/ -not -path '*/\\.*' -type f -delete",
    "clean:data": "find data/ -not -path '*/\\.*' -type f -delete",
    "generate": "npm-run-all -p generate:*",
    "generate:github": "node scripts/github-images/main.js src/img/github",
    "generate:data": "go run scripts/generate-data/main.go data/",
    "serve": "go run scripts/serve/main.go",
    "watch": "npm-watch"
  },
  "watch": {
    "build:css": {
      "patterns": [
        "src/css"
      ],
      "extensions": "css"
    },
    "build:static": {
      "patterns": [
        "src/static"
      ]
    },
    "build:html": {
      "patterns": [
        "data",
        "src/posts",
        "src/templates"
      ],
      "extensions": "html,md,toml,json"
    }
  },
  "devDependencies": {
    "imagemin-cli": "^4.0.1",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.6.0",
    "octocat-images": "^0.2.0",
    "tailwindcss": "^0.7.4"
  }
}
